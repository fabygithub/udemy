01-ejercicios-basicos.ts

let nombre = 'Strider';
let puntosVida = 95;
let arma = 'Espada';

function calcularISV(productos: Producto[] ): [number,number]{  // producto[] es un arreglo de 2 numeros
  let total = 0;
  productos.forEach( ({ precio}) => {
    total += precio;
  });
  
  return [total, total * 0.15];
  
}

